<li id="link_<%= link.id %>">
  <span class="handle">[drag]</span>
  <%= link_to link.title, edit_link_path(link) %>
  <%= link_to(image_tag("icons/cross.png", class: 'icon'), 
    {action: 'destroy', id: link}, 
    method: 'delete', 
    remote: true, 
    confirm: "Are you sure you want to delete this link?")%>
    
  <% unless link.children.empty? %>
  <ol>
    <% link.children.each do |sub|%>
      <li id="link_<%= link.id %>">
      <%= link_to sub.title, edit_link_path(sub) %>
      <%= link_to(image_tag("icons/cross.png", class: 'icon'), 
        {action: 'destroy', id: sub}, 
        method: 'delete', 
        remote: true, 
        confirm: "Are you sure you want to delete this link?")%>
      </li>
      <% end -%>
  </ol>
  <% end -%>
</li>